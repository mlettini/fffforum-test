{% extends 'presence.njk' %}

{% block content %}
  <div id="menubar">
    <div class="circle green"></div>
    <div class="status">✍️</div>
  </div>

  <div class="menu">

    <h4>Status</h4>
    <div class="item">
      <span>✍️</span>
      Writing a blog post
      <aside>⌘S</aside>
    </div>

    <hr>

    <h4>Presence</h4>
    <div class="item selected">
      <div>
        ✓
        <div class="circle green"></div>
      </div>
      Available
      <aside>⌘1</aside>
    </div>
    <div class="item">
      <div><div class="circle red"></div></div>
      Do Not Disturb
      <aside>⌘2</aside>
    </div>
    <div class="item">
      <div><div class="circle away"></div></div>
      Away
      <aside>⌘3</aside>
    </div>

    <hr>

    <div class="team">
      <h4>Your Team</h4>
      <div class="teammate">
        <img src="https://yt3.ggpht.com/a-/AN66SAzLSNpfJ0sldByoeIu3IyVDS3dDKiCS3teO-Q=s900-mo-c-c0xffffffff-rj-k-no" alt="" height="40" width="40">
        <div>
          <div class="circle red"></div>
          <h3>Bruce Wayne</h3>
          <div class="status"><span>🏙️</span> On patrol in Gotham</div>
          <time>1:37pm Gotham</time>
        </div>
        <i class="fa-regular fa-chevron-right"></i>
      </div>
      <div class="teammate">
        <img src="https://4.bp.blogspot.com/-Tek3yg7Yh54/VVj1FwY8CrI/AAAAAAAAbiw/bqQfLjDuYYU/s1600/Clark-Kent-superman-36885818-1920-800%2B(640x534).jpg" alt="" height="40" width="40">
        <div>
          <div class="green circle"></div>
          <h3>Clark Kent</h3>
          <div class="status"><span>💼</span> Making journalistic integrity my whole personality</div>
          <time>10:37am Metropolis</time>
        </div>
        <i class="fa-regular fa-chevron-right"></i>
      </div>
      <div class="teammate">
        <img src="https://www.looper.com/img/gallery/catwoman-hunted-release-date-characters-and-plot-what-we-know-so-far/intro-1634598411.jpg" alt="" height="40" width="40">
        <div>
          <div class="circle yellow"></div>
          <h3>Selina Kyle</h3>
          <div class="status"><span>💎</span> Definitely at my desk</div>
          <time>1:37pm Gotham</time>
        </div>
        <i class="fa-regular fa-chevron-right"></i>
      </div>
      <div class="teammate away">
        <img src="https://vignette.wikia.nocookie.net/marvelcrossroads/images/1/1c/Young_Barry_Allen_(Earth-9925).jpg/revision/latest?cb=20160529022850" alt="" height="40" width="40">
        <div>
          <div class="circle away"></div>
          <h3>Barry Allen</h3>
          <div class="status">No status…</div>
          <time>12:37pm Central City</time>
        </div>
        <i class="fa-regular fa-chevron-right"></i>
      </div>
    </div>

    <hr>

    <div class="item">
      Toggle Mini-Presence
      <aside>⌘M</aside>
    </div>
    <div class="item">
      Settings…
    </div>
  </div>
{% endblock %}
